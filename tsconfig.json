{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "paths": {
      "@tt/auth": ["libs/auth/src/index.ts"],
      "@tt/posts": ["libs/posts/src/index.ts"],
      "@tt/profile": ["libs/profile/src/index.ts"],
      "@tt/common-ui": ["libs/common-ui/src/index.ts"],
      "@tt/shared": ["libs/shared/src/index.ts"],
      "@tt/chats": ["libs/chats/src/index.ts"],
      "@tt/layout": ["libs/layout/src/index.ts"],
      "@tt/interfaces/*": ["libs/interfaces/src/lib/*"],
      "@tt/data-access": ["libs/data-access/src/index.ts"],
      "@tt/polygon": ["libs/polygon/src/index.ts"]
    },
    "baseUrl": "./"
  },
  "include": [
    "apps/**/*",
    "libs/**/*"
  ]
}